---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/bulma.css";
import "../styles/globals.css";

const title = "Chainflow Docs";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;0,700;1,300;1,700&family=Sora:wght@300&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="dark has-navbar-fixed-top px-0 m-0">
    <main>
      <Navbar />
      <slot />
      <Footer />
    </main>
  </body>
</html>

<style is:global>
  code {
    font-family:
      /* Menlo, */
      /* Monaco, */
      Lucida Console,
      /* Liberation Mono, */ /* DejaVu Sans Mono, */
        /* Bitstream Vera Sans Mono, */ Courier New,
      monospace;
  }
</style>
