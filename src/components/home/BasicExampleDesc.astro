<style>
  .container {
    display: flex;
  }

  .description {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .code {
    max-height: 22em;
    overflow-y: scroll;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .code::-webkit-scrollbar {
    display: none;
  }
</style>
