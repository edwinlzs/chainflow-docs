---
import GetStarted from "../components/GetStarted.astro";
import Layout from "../layouts/Layout.astro";

import { Content as CallchainSnippet } from "./home/callchains.md";
import { Content as ExtendingSnippet } from "./home/extending.md";
---

<Layout>
  <section class="hero has-text-centered">
    <div class="hero-body">
      <p class="title logo is-size-1 is-size-2-mobile">ðŸŒŠhainflow</p>
      <p class="subtitle is-size-3 is-size-3-mobile">
        Enhance your data setup and backend testing with powerful API
        callchains.
      </p>
      <GetStarted />
    </div>
  </section>

  <section
    class="is-flex is-flex-direction-column is-justify-content-center is-align-items-center"
  >
    <div class="columns p-6">
      <div
        class="column is-flex is-flex-direction-column is-justify-content-center is-align-items-end"
      >
        <div class="is-flex is-flex-direction-column is-align-items-start">
          <p>
            Make your API callchains dynamic by letting data flow throughout
            multiple endpoint calls.
          </p>
          <div class="snippet">
            <CallchainSnippet />
          </div>
        </div>
      </div>
      <div
        class="column is-flex is-justify-content-start is-align-items-center"
      >
        <figure class="flow-diagram">
          <img
            class="flow-diagram-img"
            src="../../assets/imgs/chainflow.png"
            alt="creating-chains"
          />
        </figure>
      </div>
    </div>

    <div class="columns">
      <div class="column">
        <figure class="flow-diagram">
          <img
            class="flow-diagram-img"
            src="../../assets/imgs/extending.png"
            alt="extending-chainflows"
          />
        </figure>
      </div>
      <div
        class="column is-flex is-flex-direction-column is-justify-content-center is-align-items-start"
      >
        <p class="has-text-centered">
          Group API calls into chainflows and connect them together.
        </p>
        <div class="snippet">
          <ExtendingSnippet />
        </div>
      </div>
    </div>
  </section>

  <section class="hero has-text-centered">
    <div class="hero-body">
      <GetStarted />
    </div>
  </section>
</Layout>

<style>
  .logo {
    font-family: Sora;
  }

  .hero {
    background-color: var(--bg-light);
  }

  .flow-diagram {
    overflow: hidden;
    border-radius: 3%;
  }

  .flow-diagram-img {
    transform: scale(1, 1.05); /* Get rid of white borders */
  }

  .snippet {
    font-size: 1.1rem;
  }
</style>
